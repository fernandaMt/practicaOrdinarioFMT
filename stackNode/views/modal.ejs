<!-- Modales -->
<div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">Modal title</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <form> 
			<div class="form-group">
				<label for="nombre">Producto:</label>
				<input type="text" class="form-control col-10" id="producto" name="producto" aria-describedby="lblNombreProducto" placeholder="Ej: Libreta" required>
				<!-- small id="lblTallerAyuda" class="form-text text-muted">Debe ingresar el nombre que se le asignara al taller</small -->
			</div>	
			<div class="form-group">
				<label for="nombre">Precio:</label>
				<input type="text" class="form-control col-3" id="precio" name="precio" aria-describedby="lblPrecioProducto" placeholder="Ej: 14.5" required>
				<!-- small id="lblTallerAyuda" class="form-text text-muted">Debe ingresar el nombre que se le asignara al taller</small -->
			</div>
			<div class="form-group">
				<label for="nombre">Cantidad:</label>
				<input type="text" class="form-control col-3" id="cantidad" name="cantidad" aria-describedby="lblCantidadProducto" placeholder="Ej: 14.5" required>
				<!-- small id="lblTallerAyuda" class="form-text text-muted">Debe ingresar el nombre que se le asignara al taller</small -->
			</div>
		</form>
      </div>
      <div class="modal-footer">
      	<!-- input type="hidden" id="idProd" name="idProd" / -->
        <button type="button" class="btn btn-secondary" data-dismiss="modal" id="cerrar">Cerrar</button>
        <button id="btnSend" type="button" class="btn btn-primary" value="-1" onclick="sendData(this.value)">Guardar</button>
      </div>
    </div>
  </div>
</div>